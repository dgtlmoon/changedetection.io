# TicketWatch Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION (Neon.tech PostgreSQL)
# =============================================================================
# Get this from your Neon.tech project dashboard -> Connection Details
# Format: postgresql://username:password@ep-xxxxx.region.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Slack webhook URL for alerts
# Create at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================
# Path to proxy list file (one proxy per line)
# Format: protocol://user:pass@host:port or protocol://host:port
PROXY_LIST_PATH=

# =============================================================================
# SECURITY
# =============================================================================
# Salted password for UI authentication (optional)
# Generate with: python -c "import hashlib; print(hashlib.sha256('yourpassword'.encode()).hexdigest())"
SALTED_PASS=

# =============================================================================
# APPLICATION
# =============================================================================
# Port to run on (default: 5000)
PORT=5000

# Base URL for the application (used in notifications)
BASE_URL=http://localhost:5000
